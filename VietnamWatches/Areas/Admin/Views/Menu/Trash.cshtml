@model IEnumerable<MyClass.Models.Menu>

@{
    ViewBag.Title = "Thùng rác menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/admin/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/admin/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<h2 class="my-2 mx-2">Thùng rác danh mục sản phẩm </h2>

<p class="my-2 mx-2">
    <div class="row">
        <div class="col col-md-10">
            <a href="@Url.Action("Index", "Menu")" class="btn btn-sm btn-danger my-2"><i class="fas fa-arrow-circle-left"></i>  Về danh sách</a>
        </div>
    </div>

</p>
<div class="container-fluid pt-2 px-2">
    @Html.Partial("Message")
    <table class="table table-bordered table-hover table-striped" id="myTable">
        <thead>
            <tr class="text-center">
                <th>ID</th>
                <th>Tên Menu</th>
                <th>Liên kết</th>
                <th>Kiểu Menu</th>
                <th>Vị trí</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="text-center">
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>@item.Name</td>
                <td>@item.Link</td>
                <td>@item.Type</td>
                <td>@item.Position</td>
                <td>
                    <a href="@Url.Action("ReTrash", "Menu", new { id = item.Id })" class="btn btn-sm btn-success mx-1"><i class="fas fa-recycle"></i></a>
                    <a href="@Url.Action("Delete", "Menu", new { id = item.Id })" class="btn btn-sm btn-danger mx-1 my-1"><i class="fas fa-trash"></i> </a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>