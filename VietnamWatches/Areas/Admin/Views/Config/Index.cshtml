@model IEnumerable<MyClass.Models.Config>
@{
    ViewBag.Title = "Cấu hình website";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/admin/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/admin/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<h2 class="my-2 mx-2">Cấu hình website </h2>

<p class="my-2 mx-2">
    <div class="row">
        <div class="col-lg-8 text-lg-start" style="margin-bottom: 2%;">
            @*<a href="@Url.Action("Create", "Config")" class="btn btn-sm btn-success"><i class="far fa-plus-square"></i>  Thêm</a>
            <a href="@Url.Action("Trash", "Config")" class="btn btn-sm btn-danger"><i class="fas fa-trash-restore"></i>  Thùng rác</a>*@
        </div>
    </div>
</p>
<div class="container-fluid pt-2 px-2">
    @Html.Partial("Message")
    <table class="table table-bordered table-hover table-striped" id="myTable">
        <thead>
            <tr class="text-center">
                <th style="width:10px;">
                    ID
                </th>
                <th>
                    Tên cấu hình
                </th>
                <th>
                    Giá trị
                </th>
                <th style="width:180px;">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Config", new { id = item.Id })" class="btn btn-sm btn-info mx-1"><i class="fas fa-edit"></i></a>
                        @*<a href="@Url.Action("Details", "Config", new { id = item.Id })" class="btn btn-sm btn-success mx-1 my-1"><i class="fas fa-info-circle"></i></a>
                        <a href="@Url.Action("DelTrash", "Config", new { id = item.Id })" class="btn btn-sm btn-danger mx-1 my-1"><i class="fas fa-trash"></i> </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>