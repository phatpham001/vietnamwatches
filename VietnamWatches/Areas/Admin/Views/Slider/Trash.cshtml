@model IEnumerable<MyClass.Models.Slider>

@{
    ViewBag.Title = "Thùng rác slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/admin/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/admin/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<h2 class="my-2 mx-2">Thùng rác danh mục sản phẩm </h2>

<p class="my-2 mx-2">
    <div class="row">
        <div class="col col-md-10">
            <a href="@Url.Action("Index", "Slider")" class="btn btn-sm btn-danger my-2"><i class="fas fa-arrow-circle-left"></i>  Về danh sách</a>
        </div>
    </div>

</p>
<div class="container-fluid pt-2 px-2">
    @Html.Partial("Message")
    <table class="table table-bordered table-hover table-striped" id="myTable">
        <thead>
            <tr class="text-center">
                <th style="width:30px;">
                    ID
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    Cập nhật bởi
                </th>
                <th>
                    Ngày cập nhật
                </th>
                <th style="width:120px;">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedAt)
                    </td>
                    <td>
                        <a href="@Url.Action("ReTrash", "Slider", new { id = item.Id })" class="btn btn-sm btn-success mx-1"><i class="fas fa-recycle"></i></a>
                        <a href="@Url.Action("Delete", "Slider", new { id = item.Id })" class="btn btn-sm btn-danger mx-1 my-1"><i class="fas fa-trash"></i> </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>