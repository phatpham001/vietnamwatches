@model IEnumerable<MyClass.Models.PostInfo>

<!-- latest news -->
<div class="latest-news pt-150 pb-150">
    <div class="container">

        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Tin </span> Tức</h3>
                    <p>Hãy luôn quan tâm về những bài viết luôn được cập nhật để có thể biết thêm nhiều thông tin về thị trường đồng hồ thế giới trong ngày qua.</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-latest-news">
                        <a href="@post.Slug"><div class="latest-news-bg" style="background-image: url(../Public/images/posts/@post.Images);"></div></a>
                        <div class="news-text-box">
                            <h3><a href="@post.Slug">@post.Title</a></h3>
                            <p class="blog-meta">
                                <span class="author"><i class="fas fa-user"></i> @post.TopicName</span>
                                <span class="date"><i class="fas fa-calendar"></i> @post.CreatedAt</span>
                            </p>
                            <p class="excerpt">@XString.str_Limit(post.MetaDesc, 100)</p>
                            <a href="@post.Slug" class="read-more-btn">xem thêm <i class="fas fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <a href="~/tat-ca-bai-viet" class="boxed-btn">Xem thêm...</a>
            </div>
        </div>
    </div>
</div>
<!-- end latest news -->
