                    <div class="row">
                        @foreach (var post in ViewBag.ListOther)
                        {
                            <div class="col-lg-4 col-md-6 text-center">
                                <div class="single-product-item">
                                    <div class="product-image">
                                        <a href="@post.Slug"><img src="~/Public/images/posts/@post.Images" alt=""></a>
                                    </div>
                                    <h3 class="font-monospace">@post.Title</h3>
                                    <p class="blog-meta">
                                        <span class="author"><i class="fas fa-user"></i> @post.Type</span>
                                        <span class="date"><i class="fas fa-calendar"></i> @post.CreatedAt</span>
                                    </p>
                                    <p class="excerpt">@XString.str_Limit(post.MetaDesc, 50)</p>
                                    <a href="@post.Slug" class="cart-btn"><i class="fas fa-angle-double-right"></i> Xem thêm...</a>
