@model MyClass.Models.Post
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}



<!--PreLoader-->
<div class="loader">
    <div class="loader-inner">
        <div class="circle"></div>
    </div>
</div>
<!--PreLoader Ends-->

@Html.Action("BreadCrumb", "Module")

<!-- single article section -->
<div class="mt-100 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="mb-lg-5"><img src="~/Public/images/posts/@Model.Img" /></div>
                <h2 class="font-monospace">@Model.Title</h2>
                <div class="single-article-section">
                    <div class="single-article-text">
                        <p class="blog-meta">
                            <span class="author"><i class="fas fa-user"></i> @Model.Type</span>
                            <span class="date"><i class="fas fa-calendar"></i> @Model.CreatedAt</span>
                        </p>

                        <p>@Model.MetaDesc</p>
                        <p>@Model.MetaKey</p>
                        @Html.Raw(Model.Detail)
                        <br />
                    </div>

