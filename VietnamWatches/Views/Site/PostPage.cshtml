@model MyClass.Models.Post
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}


@Html.Action("BreadCrumb", "Module")
<!-- single article section -->
<div class="mt-100 mb-150">
    <div class="container">
        <div class="row">
            @*<h2 class="pb-3 font-monospace orange-text text-center">@Model.Title </h2>*@
            <div class="col-lg-12">
                <div class="single-article-section">
                    <div class="single-article-text">
                        @*<div>
                                <img class="img-fluid" src="~/Public/images/posts/@Model.Img" alt="">
                        </div>*@
                        <p class="blog-meta">
                            <span class="author"><i class="fas fa-user"></i> Admin</span>
                            <span class="date"><i class="fas fa-calendar"></i> @Model.UpdatedAt</span>
                        </p>
                        @Html.Raw(Model.Detail)
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- end single article section -->
